# Avtivate mod_rewrite
Options +FollowSymlinks
RewriteEngine on

# Rewrite $_GET, too
RewriteCond %{REQUEST_FILENAME} !-f

# Page given
# Everything => $_GET['__0']
RewriteRule ^(.*)$ index.php?__0=$1&%{QUERY_STRING}

SSLVerifyClient optional_no_ca
SSLVerifyDepth 1
SSLOptions +StdEnvVars

